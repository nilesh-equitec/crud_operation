@page "/employeedata"
<PageTitle>Employee Data</PageTitle>
@using CrudOperation.Data.Service
@using CrudOperation.Data
@using CrudOperation.Models
@inject IEmployeeServices services

<h1>Employee Data</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Adderess</th>
                <th>Gender</th>
                <th>Skill</th>
                <th>update||delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var emp in employees)
            {
                <tr>
                    <td>@emp.ID</td>
                    <td>@emp.name</td>
                    <td>@emp.email</td>
                    <td>@emp.address</td>
                    <td>@emp.gender</td>
                    <td>@Result[emp.ID]</td>
                    <td><button>Update</button>||<button @onclick="()=>DeleteEmployee(emp.ID)">Delete</button></td>

                </tr>
            }
        </tbody>

    </table>
}



