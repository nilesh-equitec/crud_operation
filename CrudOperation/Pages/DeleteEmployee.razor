@page "/deletedata"
<PageTitle>Employee Data</PageTitle>
@using CrudOperation.Data.Service
@using CrudOperation.Data
@using CrudOperation.Models
@inject IEmployeeServices services

<h1>Employee Data</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Adderess</th>
                <th>Gender</th>
                <th>Restore</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var emp in employees)
            {
                <tr>
                    <td>@emp.id</td>
                    <td>@emp.name</td>
                    <td>@emp.email</td>
                    <td>@emp.address</td>
                    <td>@emp.gender</td>
                    <td><button @onclick="()=>Delete(emp.id)">Restore</button></td>
                    <!-- Add other cells as needed -->
                </tr>
            }
        </tbody>

    </table>
}






